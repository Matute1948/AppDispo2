<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom button style -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/botones</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <!-- Add other custom attributes here -->
    </style>
    <style name="CustomCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/colorCard</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <!-- Add other custom attributes here -->
    </style>
    <style name="CustomCardSinColor" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <!-- Add other custom attributes here -->
    </style>
</resources>