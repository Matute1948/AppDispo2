<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtListClan"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="1"
                android:padding="12dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_background"/>

            <ImageView
                android:id="@+id/imgBadgeClan"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginVertical="15dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/crown_uno" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtNomClan"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="User"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtMiemClan"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="Miembros"
                    android:textSize="12sp"/>

            </LinearLayout>

            <!-- Space to push elements to the right -->
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtTrofeosClan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:layout_marginVertical="12dp"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_gravity="center_vertical|end"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/trofeos_clan"
                android:layout_gravity="center_vertical|end"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>