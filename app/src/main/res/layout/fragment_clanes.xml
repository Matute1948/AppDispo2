<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.main.clanes.ClanesFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encuentra Clan"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="@style/CustomCardStyle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Filter Button 1 -->
            <Button
                android:id="@+id/btnFiltroTrofeos"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Trofeos de Clan"
                android:layout_margin="5dp"
                android:gravity="fill"
                style="@style/CustomButtonStyle"
                android:layout_marginHorizontal="20dp"/>

            <!-- Filter Button 2 -->
            <Button
                android:id="@+id/btnFiltroLocalidad"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Localidad"
                android:layout_margin="5dp"
                android:gravity="fill"
                style="@style/CustomButtonStyle"
                android:layout_marginHorizontal="20dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        style="@style/CustomCardStyle">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcClanes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/lytLoading"
        layout="@layout/loading_layout" />


</LinearLayout>