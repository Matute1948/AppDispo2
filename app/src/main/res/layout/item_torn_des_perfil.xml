<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:text="Veterano de las guerras de clanes"
        android:background="#CCCCCC"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/g_clanes"
        android:scaleType="centerInside" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CustomCardSinColor">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <!-- Segunda fila -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC"
                    android:padding="2dp"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="Victoria del día de guerra"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC"
                    android:padding="2dp"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="Cartas del clan reunidas"
                    android:gravity="center" />
            </TableRow>

            <!-- Segunda fila -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtVictoriasDiaGuerra"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="000"
                    android:textStyle="bold"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/txtCartasReunidasClan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="000"
                    android:gravity="center" />
            </TableRow>

            <!-- Segunda fila -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Desafíos"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Torneos"
                    android:gravity="center" />
            </TableRow>

            <!-- Tercera fila -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="50dp"
                    android:src="@drawable/g_desa"
                    android:scaleType="centerInside"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/torne"
                    android:scaleType="centerInside"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:background="#CCCCCC"
                    android:text="Máximo de victorias"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:background="#CCCCCC"
                    android:text="Torneos jugados"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMaximoVicDes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="000"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtTorneoJugados"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="000"
                    android:gravity="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="10dp"
                    android:background="#CCCCCC"
                    android:textStyle="bold"
                    android:text="Cartas ganadas"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="10dp"
                    android:background="#CCCCCC"
                    android:textStyle="bold"
                    android:text="Torneos ganados"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtCartasGanadasDesafios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="000"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtTorneosGanados"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="000"
                    android:gravity="center"/>
            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
